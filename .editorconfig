root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{md,yml}]
indent_size = 2
tab_width = 2

[*.{md}]
block_comment_start = /**
block_comment = *
block_comment_end = */

[*.{cs,json}]
quote_type = double
indent_size = 4
